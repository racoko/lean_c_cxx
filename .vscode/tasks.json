{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "F:\\env\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I${workspaceFolder}",
                "${file}",
                "${fileDirname}\\..\\*.cpp",
                "-o",
                "${workspaceFolder}\\build\\bin\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "video lib build task",
            "command": "F:\\env\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I${workspaceFolder}",
                "-I${workspaceFolder}\\..\\include",
                "${file}",
                "${fileDirname}\\..\\*.cpp",
                "-L${fileDirname}\\..\\lib",
                "-lavformat",
                "-lavcodec",
                "-lavutil",
                "-lavdevice",
                "-lavfilter",
                "-lswresample",
                "-lswscale",
                "-o",
                "${workspaceFolder}\\build\\bin\\${fileBasenameNoExtension}.exe",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "video lib build task"
        }
    ],
    "version": "2.0.0"
}